<div class='bg-white p-4 rounded' style='max-width: 600px; margin-inline: auto'>
  <h2 class='text-center'>Tạo bài viết mới</h2>
  <form method='post' action='/articles'>
    <div class='mb-3'>
      <label for='name' class='form-label'>Tên bài viết</label>
      <input type='text' class='form-control' name='name' />
    </div>
    <div class='mb-3'>
      <label for='desc' class='form-label'>Mô tả</label>
      <textarea type='text' class='form-control' name='desc'></textarea>
    </div>
    <div class='mb-3'>
      <label for='imgPath' class='form-label'>Link hình ảnh</label>
      <input type='text' class='form-control' name='imgPath' />
    </div>
    <div class='mb-3'>
      <label for='sourceLink' class='form-label'>Link source</label>
      <input type='text' class='form-control' name='sourceLink' />
    </div>
    <div class='mb-3'>
      <label for='previewLink' class='form-label'>Link demo</label>
      <input type='text' class='form-control' name='previewLink' />
    </div>
    <div class='mb-3'>
      <label for='tag' class='form-label'>Tag list</label>
      <input type='text' class='form-control' name='tag' />
    </div>
    <button type='submit' class='btn btn-primary w-100'>Tạo bài viết</button>
  </form>
</div>